@{
    Layout = "~/Views/Shared/_ShopOwnerNav.cshtml";
}
@model Addproducts

<form method="post" asp-action="UpdateProduct" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <img src="@($"https://localhost:7165/{Model.ProductImg}")" alt="Deatls" />
    <div>
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" class="form-control"/>
    </div>

    <div>
        <label asp-for="Price"></label>
        <input asp-for="Price" type="number" class="form-control"/>
    </div>

    <div>
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" type="number" class="form-control"/>
    </div>

    <div>
        <label asp-for="ProductDescription"></label>
        <input asp-for="ProductDescription" class="form-control"/>
    </div>

    <div>
        <label for="productImg">Product Image</label>
        <input type="file" id="productImg" name="productImg"  class="form-control"/>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>
